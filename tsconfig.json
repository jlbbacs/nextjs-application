{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
  "@prisma/client": ["./generated/client/index"], // Add this specific line
  "@/lib/*": ["./app/lib/*"],
  "@/action/*": ["./app/action/*"],
  "@/generated/*": ["./generated/*"],
  "@/*": ["./app/*"]
}
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "generated/**/*.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "generated/client/*.d.ts"

  ],
  "exclude": ["node_modules"]
}