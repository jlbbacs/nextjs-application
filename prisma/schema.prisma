// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  output          = "../generated/client"
  // 1. ADD THIS LINE: This allows Prisma to use the Turso/LibSQL adapter
  previewFeatures = ["driverAdapters"] 
}

datasource db {
  provider = "sqlite"
  // 2. ADD THIS LINE: Even if you use an adapter, Prisma needs this 
  // to satisfy its internal requirements during build time.
  url      = env("TURSO_DATABASE_URL")
}

model Post {
  id      Int    @id @default(autoincrement())
  title   String
  content String
}